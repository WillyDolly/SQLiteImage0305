<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_margin="10dp"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:id="@+id/imageViewHinhDS"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:textColor="#f00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textViewTen"
        android:layout_alignTop="@+id/imageViewHinhDS"
        android:layout_toRightOf="@+id/imageViewHinhDS"
        android:layout_toEndOf="@+id/imageViewHinhDS" />

    <TextView
        android:layout_marginTop="10dp"
        android:textColor="#0000ff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textViewGia"
        android:layout_below="@+id/textViewTen"
        android:layout_toRightOf="@+id/imageViewHinhDS"
        android:layout_toEndOf="@+id/imageViewHinhDS" />
</RelativeLayout>